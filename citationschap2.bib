@article{moraComparingSUASPhotogrammetricallyDerived2019,
  title = {Comparing {{sUAS Photogrammetrically-Derived Point Clouds}} with {{GNSS Measurements}} and {{Terrestrial Laser Scanning}} for {{Topographic Mapping}}},
