@article{morganSpatiotemporalAnalysisVegetation2020,
  title = {Spatiotemporal {{Analysis}} of {{Vegetation Cover Change}} in a {{Large Ephemeral River}}: {{Multi-Sensor Fusion}} of {{Unmanned Aerial Vehicle}} ({{UAV}}) and {{Landsat Imagery}}},
  shorttitle = {Spatiotemporal {{Analysis}} of {{Vegetation Cover Change}} in a {{Large Ephemeral River}}},
  author = {Morgan, Bryn E. and Chipman, Jonathan W. and Bolger, Douglas T. and Dietrich, James T.},
