  author = {M{\"u}llerov{\'a}, Jana and Gago, Xurxo and Bu{\v c}as, Martynas and Company, Jaume and Estrany, Joan and Fortesa, Josep and Manfreda, Salvatore and Michez, Adrien and Mokro{\v s}, Martin and Paulus, Gernot and Ti{\v s}kus, Edvinas and Tsiafouli, Maria A. and Kent, Rafi},
