@article{putzenlechnerFractionalVegetationCover2022,
  title = {Fractional {{Vegetation Cover Derived}} from {{UAV}} and {{Sentinel-2 Imagery}} as a {{Proxy}} for {{In Situ FAPAR}} in a {{Dense Mixed-Coniferous Forest}}?},
