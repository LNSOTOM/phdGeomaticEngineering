@article{pervinFusionAirborneHyperspectral2022,
  title = {Fusion of Airborne Hyperspectral and {{LiDAR}} Canopy-Height Data for Estimating Fractional Cover of Tall Woody Plants, Herbaceous Vegetation, and Other Soil Cover Types in a Semi-Arid Savanna Ecosystem},
