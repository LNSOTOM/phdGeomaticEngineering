@article{fuSegmentingIndividualTree2022,
  title = {Segmenting {{Individual Tree}} from {{TLS Point Clouds Using Improved DBSCAN}}},
  author = {Fu, Hongping and Li, Hao and Dong, Yanqi and Xu, Fu and Chen, Feixiang},
  year = {2022},
