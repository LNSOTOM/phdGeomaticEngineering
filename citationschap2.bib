  author = {Bajjouk, Touria and Mouquet, Pascal and Ropert, Michel and Quod, Jean-Pascal and Hoarau, Ludovic and Bigot, Lionel and Le Dantec, Nicolas and Delacourt, Christophe and Populus, Jacques},
  year = {2019},
