@article{duboisUsingImagingSpectroscopy2018,
  title = {Using Imaging Spectroscopy to Detect Variation in Terrestrial Ecosystem Productivity across a Water-Stressed Landscape},
  author = {DuBois, Sean and Desai, Ankur R. and Singh, Aditya and Serbin, Shawn P. and Goulden, Michael L. and Baldocchi, Dennis D. and Ma, Siyan and Oechel, Walter C. and Wharton, Sonia and Kruger, Eric L. and Townsend, Philip A.},
  year = {2018},
